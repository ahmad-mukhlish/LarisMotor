<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/spacing_xlarge"
    tools:context=".view.owner.AddMotorBaruActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/harga_mobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789 -."
            android:hint="Harga (Tampilan Web)"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/dp_mobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789 -."
            android:hint="DP"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/cicilan_mobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789 -."
            android:hint="Cicilan"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/tenor_mobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tenor (Bulan)"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner1_mobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spinner2_mobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <TextView
        android:id="@+id/label_ambil_mobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_medium"
        android:paddingRight="@dimen/spacing_medium"
        android:text="Ambil Gambar"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/grey_90" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_middle"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/image1_mobar"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/motorbike" />


            <TextView
                android:id="@+id/label_depan_mobar"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="Tampak\nDepan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/image2_mobar"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/motorbike" />

            <TextView
                android:id="@+id/label_samping_mobar"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="Tampak\nSamping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image3_mobar"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/motorbike" />

            <TextView
                android:id="@+id/label_belakang_mobar"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="Tampak\nBelakang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/btnCamera_mobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/round_button"
        android:text="Ambil Gambar"
        android:textColor="@android:color/white" />


    <Button
        android:visibility="gone"
        android:id="@+id/btnImage_mobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/round_button"
        android:text="Buka Galeri"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnSave_mobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/round_button"
        android:text="Simpan"
        android:textColor="@android:color/white" />

</LinearLayout>


